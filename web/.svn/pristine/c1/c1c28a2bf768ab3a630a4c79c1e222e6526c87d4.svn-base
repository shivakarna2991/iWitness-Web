<!-- Bubble Email Modal -->
<form id = "other-platform" action="" method="post" role="form">
    <input type="hidden" name="name" value="N/A">
    <input type="hidden" name="platform" value="Windows">
    <div id="frmWindows" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Email Notification</h4>
                </div>
                <div class="modal-body">
                    <p>Windows version is coming soon. Share your email to be notified when it is available.</p>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control required" placeholder="Email Address">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" name="action" value="iwitness_do_other_platform">Submit</button>
                </div>
            </div>
        </div>
    </div>
</form>