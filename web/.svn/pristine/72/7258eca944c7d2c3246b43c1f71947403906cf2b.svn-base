body {
  color: #555;
  background-color: $grey;

  &.mce-content-body {
    background-color: #f5f5f5;
    padding: 15px;
  }
}

h5 {
  text-transform: uppercase;
}

a {
  color: $grey;
  outline: 0 none !important;

  &:hover {
    color: $darkRed;
  }

  span {
    color: $grey;

    &:hover {
      color: $darkRed;
      text-decoration: underline;
    }
  }
}

hr {
  color: $middleGrey;
  border-color: $middleGrey;
}

#social-media {
  // twitter and facebook social media
  position: absolute;
  right: ($grid-gutter-width / 2);
  top: 15px;
  z-index: 1;
  > li {
    margin-left: 5px;
    margin-right: 2px;
  }
}

.head {
  border-bottom: 5px solid $grey;
  background-color: $white;

  .navbar-nav > li > a {
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .navbar-default {
    margin: 0;
    background-color: transparent;
    border-color: transparent;

    .navbar-header {
      margin-top: 10px;
    }

    #open-collapse {
      ul {
        &.navbar-right {
          margin-right: -15px !important;
          margin-top: 53px !important;
        }
      }
    }

    .navbar-nav {
      li {

        &#message-notification {

          .dropdown-menu {
            margin-top: 9px !important;
            min-width: 350px !important;
            right: -20px !important;

            &:before {
              position: absolute;
              top: -7px;
              right: 70px;
              display: inline-block;
              border-right: 7px solid transparent;
              border-bottom: 7px solid #ccc;
              border-left: 7px solid transparent;
              border-bottom-color: rgba(0, 0, 0, 0.2);
              content: '';
            }

            &:after {
              position: absolute;
              top: -6px;
              right: 71px;
              display: inline-block;
              border-right: 6px solid transparent;
              border-bottom: 6px solid #ffffff;
              border-left: 6px solid transparent;
              content: '';
            }

            li {
              margin: -10px -5px -30px !important;

              .panel {
                background: rgba(255, 255, 255, .98) !important;

                .panel-heading {
                  padding: 9px !important;
                  color: #777 !important;
                }

                .panel-body {
                  padding: 0 15px !important;
                  width: 350px !important;
                  height: 300px !important;
                  overflow-y: scroll !important;
                  overflow-x: hidden !important;

                  .list-group {
                    margin: 0 -15px !important;
                    padding: 0 !important;

                    .list-group-item {
                      border: medium none !important;
                      margin: 0 1px !important;
                      padding: 25px !important;

                      &:hover {
                        background-color: #eee !important;
                      }

                      .message-text {
                        margin: -12px 1px 1px -25px !important;
                        position: relative;
                      }

                      .message-action {
                        position: relative;
                        margin: -14px -35px -16px 0px ! important;
                        padding: 0px 3px 0px 0px ! important;

                        a {
                          padding: 0 2px !important;
                          text-decoration: none !important;

                          &:hover {
                            padding: 0 2px !important;
                            background-color: #eee !important;
                            text-decoration: none !important;
                          }
                        }
                      }
                    }
                  }
                }

                .panel-footer {
                  padding: 0 !important;
                  background-color: $white;
                  border-top: 1px solid transparent !important;

                  a {
                    text-decoration: none;
                  }
                }
              }
            }
          }

          .badge {
            @extend .badge;

            text-decoration: none;
            background-color: $lightRed;
            color: $white;

            left: 22px !important;
            top: 9px !important;
            position: absolute !important;
            padding: 1px 2px !important;
          }
        }

        a {
          text-decoration: none;

          img {
            &.hidden-xs {
              display: inline !important;
            }
          }
        }
        ul {
          &.dropdown-menu {
            margin: 0 0 0 -2px !important;

            // menu sub level 2
            .dropdown-submenu {
              position: relative;

              .dropdown-menu {
                width: 136% !important;
              }
            }

            .dropdown-submenu > .dropdown-menu {
              top: 0;
              margin-top: -6px;
              margin-left: -1px;
              left: -214px;
              -webkit-border-radius: 6px 6px 6px 6px;
              -moz-border-radius: 6px 6px 6px 6px;
              border-radius: 6px 6px 6px 6px;
            }

            .dropdown-submenu:hover > .dropdown-menu {
              display: block;
            }

            .dropdown-submenu > a:after {
              display: block;
              content: "";
              float: right;
              width: 0;
              height: 0;
              border: none;
              margin-top: 5px;
              margin-right: -10px;
            }

            .dropdown-submenu:hover > a:after {
              border-left-color: #fff;
            }
          }
          li {
            a {
              text-decoration: none;

              &:hover {
                background-color: $lightGrey !important;
              }
            }
            &.divider {
              padding: 0;
              margin: 0;
            }
          }
        }
      }
      .open {
        a {
          &.dropdown-toggle {
            &:focus,
            &:hover {
              background-color: $white !important;
            }
          }
        }
      }
    }
  }
}

.bd {
  min-height: 530px;
  background-color: $lightGrey;
}

.content-container {
  padding-top: 15px;
  padding-bottom: 45px;
  background-color: #f5f5f5;
}

.right {
  float: right;
}

.right-header {
  text-align: right;
  padding-top: 25px;
  padding-bottom: 5px;
  font-size: 1.1em;
}

.thumbnail {
  margin-bottom: 0 !important;
}

.home {
  padding: 30px 15px 0px 15px;
}

.home-info {
  text-align: right;
  padding: 30px 20px;

  h1 {
    color: $red;
    text-transform: uppercase;
    font-size: 6em;
    font-weight: bold;
    line-height: .9em;
  }

  p {
    color: $grey;
    font-size: 1.3em;
    line-height: 25px;
  }
}

.bottom-content {
  background-color: $white;
  border-top: 2px solid $grey;
  border-bottom: 2px solid #555555;

  .inner {
    div {
      padding: 20px 40px;
      font-style: italic;

      &.span4, &.span5 {
        font-size: 20px;
        line-height: 1.25em;
        padding: 20px 30px;

        p {
          margin-bottom: 3px;
          &.small {
            font-size: .75em;
          }
        }
      }
      &.span3 {
        border-left: 1px solid $grey;
        border-right: 1px solid $grey;
      }
    }
  }

  .bottom-box {
    text-align: center;
    vertical-align: middle;

    > div {
      padding-top: 15px;
      padding-bottom: 15px;
      min-height: 80px;
    }

    .bottom-box-border {
      border-right: solid 1px $grey;
    }
  }
}

.foot {
  font-size: .75em;
  color: white;
  background-color: $grey;
  padding: 11px 0;
  height: 20px;
  a {
    color: white;
  }
  .foot-links {

    li {
      margin-right: 5px;
    }
  }
}

.form-group {
  .error {
    color: $red;
    display: block;
    margin-bottom: 10px;
    margin-top: 5px;
  }
}

.error {
  color: $red !important;
}

.btn {
  text-transform: uppercase;
}

.btn-primary {
  @extend .btn-primary;

  background-color: $lightRed !important;
  border-color: darken($lightRed, 12%) !important;
  text-transform: uppercase !important;

  &:hover,
  &:focus,
  &:active,
  &.active {
    background-color: darken($lightRed, 8%) !important;
    border-color: darken($lightRed, 12%) !important;
  }
}

.btn-default {
  @extend .btn-default;

  background-color: $middleGreyButton !important;
  border-color: darken($middleGreyButton, 12%) !important;
  color: $white;
  text-transform: uppercase !important;

  &:hover,
  &:focus,
  &:active,
  &.active
  &:hover {
    color: $white !important;
    background-color: darken($middleGreyButton, 8%) !important;
    border-color: darken($middleGreyButton, 12%) !important;
  }
}

.btn-warning {
  @extend .btn-warning;

  text-transform: uppercase;
  background-color: $orange;
  border-color: darken($darkOrange, 12%);

  &:hover,
  &:focus,
  &:active,
  &.active {
    background-color: darken($orange, 8%);
    border-color: darken($darkOrange, 12%);
  }
}

.table-responsive {
  width: 100%;
  margin-bottom: 15px;
  overflow-y: hidden;
  overflow-x: scroll;
  -ms-overflow-style: -ms-autohiding-scrollbar;
  -webkit-overflow-scrolling: touch;
}

.table {
  box-shadow: 1px 0 5px rgba(0, 0, 0, 0.2);
}

.pagination {
  @extend .pagination;

  margin: 0 5px 5px 0 !important;

  li {
    &.active > a {
      background-color: $lightRed;
      border-color: $lightRed;

      &:hover {
        background-color: darken($lightRed, 8%);
        border-color: darken($lightRed, 12%);
      }
    }
  }
}

.bg-grey {
  color: $body-bg;
  background: linear-gradient(#4d4d4d, #2f2f2f) repeat scroll 0 0 rgba(0, 0, 0, 0);
  background: #4d4d4d;
}

.popover {
  .popover-content {
    width: 200px;
    word-wrap: break-word;
    word-break: break-all;
  }
}

/*** Bootstrap popover ***/
#popover-target {

  label {
    margin: 0 5px;
    display: block;
  }

  input {
    margin-right: 5px;
  }
}

.modal {
  .modal-content {
    background-color: #eee;
  }
}

/* hack for IE only */
.navbar-inner {
  filter: none;
}

.well {
  background-color: #efefef;
}

.form-horizontal {
  .control-label {
    text-align: left;
  }
}

.widget {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075);
  border-right: 2px;
  .panel-heading {
    background: none repeat scroll 0 0 $white;
    min-height: 50px;
    h3 {
      font-weight: bolder;
      margin-top: 7px;
    }
  }

  .panel-footer {
    background: none repeat scroll 0 0 $white;
    position: relative;
    .num-comment {
      position: absolute;
      top: 10px;
      right: 10px;
    }

    .btn {
      margin-top: 5px;
    }
  }
}